<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Components.Popups.NewGroupController">
   <root>
      <AnchorPane id="AnchorPane" prefHeight="116.0" prefWidth="338.0">
         <children>
            <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <BorderPane prefHeight="200.0" prefWidth="200.0" />
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <left>
                        <Label text="Group Name" BorderPane.alignment="CENTER">
                           <padding>
                              <Insets left="10.0" right="10.0" />
                           </padding>
                        </Label>
                     </left>
                     <center>
                        <TextField fx:id="groupName" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets left="30.0" right="30.0" />
                           </BorderPane.margin>
                        </TextField>
                     </center>
                  </BorderPane>
                  <BorderPane prefHeight="105.0" prefWidth="600.0">
                     <right>
                        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="okButton" mnemonicParsing="false" onAction="#okButton" text="Ok">
                                 <HBox.margin>
                                    <Insets bottom="30.0" right="20.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButton" text="Cancel">
                                 <HBox.margin>
                                    <Insets bottom="30.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </right>
                     <bottom>
                        <Label fx:id="warning" text="Please enter text for New Group" textFill="#f00707" BorderPane.alignment="CENTER" />
                     </bottom>
                  </BorderPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </root>
</Scene>
